+++ b/drivers/net/ethernet/lantiq/cqm/grx500/cbm.h
@@ -476,8 +476,8 @@ struct flow_id {
 	u32 q2:4;
 	u32 q1:4;
 	u32 q0:4;
-};
 #endif
+};
 
